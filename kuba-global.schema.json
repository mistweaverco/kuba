{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://kuba.mwco.app/kuba-global.schema.json",
  "title": "Global Kuba Configuration File",
  "description": "Schema for the global kuba configuration file located at ~/.config/kuba/config.yaml",
  "type": "object",
  "properties": {
    "cache": {
      "description": "Cache configuration. Can be a boolean, number (seconds), or duration string (e.g., '1d', '2w', '72h', '2y').",
      "oneOf": [
        { "type": "boolean" },
        { "type": "number" },
        { "type": "string", "pattern": "^(\\d+(?:\\.\\d+)?[smhdwy]|\\d+)$" },
        {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "ttl": {
              "oneOf": [
                { "type": "number" },
                { "type": "string", "pattern": "^(\\d+(?:\\.\\d+)?[smhdwy]|\\d+)$" }
              ]
            }
          },
          "additionalProperties": false
        }
      ]
    }
  },
  "additionalProperties": false
}
